% Please edit documentation in R/efm.R
\name{efm_batch}
\alias{efm_batch}
\title{Perform exponential factor model estimation.}
\usage{
efm_batch(
  Vt,
  batch_size,
  step_size,
  X,
  factor_family,
  algo = "lapl",
  max_epoch = 5,
  dispersion = 1,
  weights = 1,
  adam_control = list(rho = 1, abs_tol = 1e-06, beta1 = 0.9, beta2 = 0.999, epislon =
    10^-8, sample_random = TRUE),
  sample_size,
  eval_size,
  eval_likeli = FALSE,
  identify_ = FALSE
)
}
\arguments{
\item{Vt, }{Initialization of the estimation.}

\item{batch_size}{Batch size for SGD.}

\item{step_size}{Step size or learning rate for SGD.}

\item{X}{data to conduct factor inference}

\item{factor_family}{Family object to specify factor loss.}

\item{algo}{Optimization algorithm to be chosen from 1). sml (simulated maximum likelihood) 2). ps (posterior sampling) 3). lapl (laplacian approxmation).}

\item{max_epoch}{number of optimization epoch.}

\item{dispersion}{dispersion parameter, effective for dispersed family, should be 1 for non-dispersed family.}

\item{weights}{Entrywise weight.}

\item{adam_control}{Adam optimization control parameters.}

\item{sample_size}{number of monte carlo samples to estimate the gradients}

\item{eval_size}{number of monte carlo samples to evaluate the marginal likelihood}

\item{eval_likeli}{boolen, set to false to skip marginal likelihood evaluation}

\item{identify_}{boolen, set to true to enable identifiability at every iteration}
}
\value{
Estimation of projection matrix Vt.
}
\description{
Perform exponential factor model estimation.
}
